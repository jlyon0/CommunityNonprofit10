<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.nonprofitapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".ui.login.LoginActivity"
            android:label="@string/title_activity_login"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.nonprofitapp.MainActivity" />
        </activity>
        <activity android:name=".PickupDateSelectionActivity"
            android:parentActivityName=".GroceryBagSelectionActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".GroceryBagSelectionActivity" />
        </activity>
        <activity android:name=".ConfirmationActivity"
            android:parentActivityName=".PickupTimeSelectionActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".PickupTimeSelectionActivity" />
        </activity>
        <activity android:name=".PickupTimeSelectionActivity"
            android:parentActivityName=".PickupDateSelectionActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".PickupDateSelectionActivity" />
        </activity>
        <activity android:name=".GroceryBagSelectionActivity"
            android:parentActivityName=".Foodbank_Selection_Page">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Foodbank_Selection_Page" />
        </activity>


        <activity android:name=".Foodbank_Selection_Page"
            android:parentActivityName =".MainActivity">
            <meta-data
                android:name = "android.support.PARENTACTIVITY"
                android:value = "com.example.nonprofitapp.MainActivity"/>
        </activity>


        <activity
            android:name=".Window_Display"
            android:parentActivityName=".ConfirmationActivity">
            <meta-data
                android:name="android.support.PARENTACTIVITY"
                android:value ="com.example.nonprofitapp.ConfirmationActivity" />



        </activity>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />


                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>